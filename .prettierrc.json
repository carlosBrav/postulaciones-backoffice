{
  "singleQuote": true,
  "trailingComma": "none",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@core/(.*)$",
    "^@domain/(.*)$",
    "^@infra/(.*)$",
    "^@main/(.*)$",
    "^@presentation/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "printWidth": 80,
  "bracketSpacing": true,
  "tabWidth": 2,
  "semi": false,
  "endOfLine": "auto",
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.tsx",
      "options": {
        "parser": "babel-ts"
      }
    }
  ]
}
